<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.entrance.signUp.SignUpInfoActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textForet"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/foret_logo_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutIntroduce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvIntroduce1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:letterSpacing="-0.07"
            android:text="안녕하세요."
            android:textAlignment="textStart"
            android:textColor="@color/textForet"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvIntroduce2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:letterSpacing="-0.07"
            android:text="포레에 가입하신 것을"
            android:textAlignment="textStart"
            android:textColor="@color/textBlack"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tvIntroduce3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.07"
            android:text="환영합니다!"
            android:textAlignment="textStart"
            android:textColor="@color/textBlack"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tvIntroduce4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="60dp"
            android:letterSpacing="-0.05"
            android:text="더 효과적인 포레 사용을 위해 몇 가지를 \n더 등록해야 해요."
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#303030" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:letterSpacing="-0.07"
            android:text="포레에서 활용할 태그들을 선택해주세요."
            android:textAlignment="textStart"
            android:textColor="@color/textForet"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="-0.03"
            android:text="태그는 당신이 포레를 찾고, 만드는데 도움을 줍니다.\n반드시 한 개 이상 골라주세요."
            android:textColor="@color/textBlack" />

        <TextView
            android:id="@+id/tvTagSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_foret"
            android:letterSpacing="-0.05"
            android:padding="3dp"
            android:text="  태그 선택하기  "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvTagSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="#태그" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRegion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvRegion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:letterSpacing="-0.07"
            android:text="활동하고 싶은 지역을 등록해주세요."
            android:textAlignment="textStart"
            android:textColor="@color/textForet"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRegion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="-0.03"
            android:text="반드시 지역 중 하나를 선택하셔야 합니다."
            android:textColor="@color/textBlack" />

        <TextView
            android:id="@+id/tvRegionSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_foret"
            android:letterSpacing="-0.05"
            android:padding="3dp"
            android:text="  지역 선택하기  "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvRegionSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="지역" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPhoto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvPhoto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:letterSpacing="-0.07"
            android:text="나의 프로필 사진을 선택해주세요."
            android:textAlignment="textStart"
            android:textColor="@color/textForet"
            android:textSize="35sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPhoto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="-0.03"
                    android:text="프로필 사진을 등록해주세요."
                    android:textColor="@color/textBlack" />

                <TextView
                    android:id="@+id/tvPhotoSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_foret"
                    android:letterSpacing="-0.05"
                    android:padding="3dp"
                    android:text="  사진 등록하기  "
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/test"
                tools:src="@tools:sample/avatars" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFinish"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvFinish1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:letterSpacing="-0.07"
            android:text="Welcome"
            android:textAlignment="textStart"
            android:textColor="@color/textForet"
            android:textSize="85sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFinish2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="환영합니다!"
                    android:textColor="@color/textBlack"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvFinishMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SANDY님,"
                    android:textColor="@color/textBlack"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvFinish4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="포레를 시작해볼까요?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/round_foret_circle"
                android:shadowColor="#000000"
                android:shadowDx="50"
                android:text="Go"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF"
                android:textSize="35dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutPrevNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvPrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="left"
                android:text="\u003C\u003C"
                android:textColor="@color/textForet"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <View
                android:id="@+id/vDump"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:gravity="right"
                android:text="\u003E\u003E"
                android:textColor="@color/textForet"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>