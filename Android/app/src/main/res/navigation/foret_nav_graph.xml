<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foret_nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- 홈 -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.project.foret.ui.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_foretFragment"
            app:destination="@id/foretFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_foretBoardFragment"
            app:destination="@id/foretBoardFragment" />
    </fragment>

    <!-- 익명게시판 -->
    <fragment
        android:id="@+id/anonymousForumFragment"
        android:name="com.project.foret.ui.annoymousForum.AnonymousForumFragment"
        android:label="AnonymousForumFragment">
        <action
            android:id="@+id/action_anonymousForumFragment_to_anonymousForumBoardFragment"
            app:destination="@id/anonymousForumBoardFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_anonymousForumFragment_to_foretBoardFragment"
            app:destination="@id/foretBoardFragment" />
        <action
            android:id="@+id/action_anonymousForumFragment_to_boardWriteFragment"
            app:destination="@id/boardWriteFragment" />
    </fragment>

    <!-- 검색 -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.project.foret.ui.search.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_foretFragment"
            app:destination="@id/foretFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <!-- 채팅 -->
    <fragment
        android:id="@+id/chattingFragment"
        android:name="com.project.foret.ui.chat.ChattingFragment"
        android:label="ChattingFragment" />

    <!-- 알람 -->
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.project.foret.ui.notification.NotificationFragment"
        android:label="NotificationFragment" />

    <fragment
        android:id="@+id/foretFragment"
        android:name="com.project.foret.ui.foret.ForetFragment"
        android:label="ForetFragment">
        <action
            android:id="@+id/action_foretFragment_to_foretBoardFragment"
            app:destination="@id/foretBoardFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/foretBoardFragment"
        android:name="com.project.foret.ui.foret.ForetBoardFragment"
        android:label="ForetBoardFragment" >
        <argument
            android:name="boardId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/anonymousForumBoardFragment"
        android:name="com.project.foret.ui.annoymousForum.AnonymousForumBoardFragment"
        android:label="AnonymousForumBoardFragment" />
    <fragment
        android:id="@+id/boardWriteFragment"
        android:name="com.project.foret.ui.BoardWriteFragment"
        android:label="fragment_board_write"
        tools:layout="@layout/fragment_board_write" >
        <action
            android:id="@+id/action_boardWriteFragment_to_foretBoardFragment"
            app:destination="@id/foretBoardFragment" />
    </fragment>

</navigation>