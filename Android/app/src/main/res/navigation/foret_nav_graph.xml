<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foret_nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- 홈 -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.project.foret.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_foretFragment"
            app:destination="@id/foretFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_foretBoardFragment"
            app:destination="@id/boardFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <!-- 익명게시판 -->
    <fragment
        android:id="@+id/anonymousForumFragment"
        android:name="com.project.foret.ui.annoymousForum.AnonymousForumFragment"
        android:label="AnonymousForumFragment"
        tools:layout="@layout/fragment_anonymousforum" >
        <action
            android:id="@+id/action_anonymousForumFragment_to_foretBoardFragment"
            app:destination="@id/boardFragment" />
        <action
            android:id="@+id/action_anonymousForumFragment_to_boardWriteFragment"
            app:destination="@id/boardWriteFragment" />
    </fragment>

    <!-- 검색 -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.project.foret.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_foretFragment"
            app:destination="@id/foretFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <!-- 채팅 -->
    <fragment
        android:id="@+id/chattingFragment"
        android:name="com.project.foret.ui.chat.ChattingFragment"
        android:label="ChattingFragment"
        tools:layout="@layout/fragment_chatting" />

    <!-- 알람 -->
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.project.foret.ui.notification.NotificationFragment"
        android:label="NotificationFragment"
        tools:layout="@layout/fragment_notification" />

    <fragment
        android:id="@+id/foretFragment"
        android:name="com.project.foret.ui.foret.ForetFragment"
        android:label="ForetFragment"
        tools:layout="@layout/fragment_foret" >
        <action
            android:id="@+id/action_foretFragment_to_boardFragment"
            app:destination="@id/boardFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_foretFragment_to_boardWriteFragment"
            app:destination="@id/boardWriteFragment" />
        <argument
            android:name="foretId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/boardFragment"
        android:name="com.project.foret.ui.board.BoardFragment"
        android:label="boardFragment"
        tools:layout="@layout/fragment_board">
        <argument
            android:name="boardId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/boardWriteFragment"
        android:name="com.project.foret.ui.board.BoardWriteFragment"
        android:label="fragment_board_write"
        tools:layout="@layout/fragment_board_write" >
        <action
            android:id="@+id/action_boardWriteFragment_to_foretBoardFragment"
            app:destination="@id/boardFragment" />
        <argument
            android:name="isAnonymous"
            app:argType="boolean" />
        <argument
            android:name="foretId"
            app:argType="long" />
    </fragment>

</navigation>